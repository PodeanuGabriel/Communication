<h1>Listing reminders</h1>

<table>
  <tr>
    <th>From</th>
    <th>To</th>
    <th>Subject</th>
    <th>Content</th>
    <th>Type</th>
    <th>Interval</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @reminders.each do |reminder| %>
  <tr>
    <td><%= reminder.from %></td>
    <td><%= reminder.to %></td>
    <td><%= reminder.subject %></td>
    <td><%= reminder.content %></td>
    <td><%= reminder.type %></td>
    <td><%= reminder.interval %></td>
    <td><%= link_to 'Show', reminder %></td>
    <td><%= link_to 'Edit', edit_reminder_path(reminder) %></td>
    <td><%= link_to 'Destroy', reminder, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

